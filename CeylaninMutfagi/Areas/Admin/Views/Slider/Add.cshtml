@model  CeylaninMutfagi.Areas.Admin.Models.SliderModel
@{
    ViewBag.Title = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-12">
  <h1>   Yeni Slider Ekle</h1>
<div class="panel panel-primary" data-collapsed="0">

    <div class="panel-body">

        @using(Html.BeginForm("AddSlider", "Slider", FormMethod.Post, new {@class="form-horizontal form-groups-bordered",enctype="multipart/form-data"}))
        {


            <div class="form-group">
                @Html.LabelFor(m=>m.SliderText,new {@class= "col-sm-3 control-label" })
                        

                <div class="col-sm-5">
                    @Html.TextBoxFor(m => m.SliderText, new { @class ="form-control" ,placeholder = "slider Yazısı" })   
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.BaslangicTarihi, new { @class = "col-sm-3 control-label" })


                <div class="col-sm-5">
                    @Html.TextBoxFor(m => m.BaslangicTarihi, new { @class = "form-control datepicker", placeholder = "Başlangıç Tarihi" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.BitisTarihi, new { @class = "col-sm-3 control-label" })


                <div class="col-sm-5">
                    @Html.TextBoxFor(m => m.BitisTarihi, new { @class = "form-control datepicker", placeholder = "Bitiş Tarihi" })
                </div>
            </div>
              <div class="form-group">
                @Html.LabelFor(m => m.Resim, new { @class = "col-sm-3 control-label" })


                <div class="col-sm-5">
                    @Html.TextBoxFor(m => m.Resim, new { @class = "form-control", placeholder ="Resim Yolu",Type="File" })
                </div>
            </div>
            
            <div class="form-group">
                <div class="col-sm-offset-3 col-sm-5">
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </div>
            </div>
        }
       </div>

</div>
</div>

<div>
    @Html.ActionLink("Slider Listesine Git", "Index")
</div>