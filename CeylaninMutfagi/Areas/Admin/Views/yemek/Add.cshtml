@model CeylaninMutfagi.Areas.Admin.Models.YemekModdel

@{
    ViewBag.Title = "Yemek Ekle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@using (Html.BeginForm("AddYemek", "yemek", FormMethod.Post, new { @class = "form-horizontal form-groups-bordered", enctype = "multipart/form-data" })) 
{
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
        <h4>yemek</h4>
