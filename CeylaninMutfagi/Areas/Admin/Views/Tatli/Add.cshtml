                @Html.EditorFor(model => model.yapilisi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.yapilisi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.tKategoriID, "tKategoriID", htmlAttributes: new { @class = "control-label col-md-2" })
